<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="0dp"
        >

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/news_item_image"
            tools:layout_editor_absoluteY="45dp" tools:layout_editor_absoluteX="0dp"


            android:cropToPadding="false" android:adjustViewBounds="false" android:scaleType="fitXY"/>

    <ImageView
            android:id="@+id/news_item_background"
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:background="@drawable/bg"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/news_item_image"
    />

    <TextView
            android:id="@+id/news_item_title"
            android:text="HEELLLOOOWW"
            android:textColor="@color/textColor"
            android:textSize="19sp"
            android:layout_width="370dp"
            android:layout_height="88dp" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/news_item_image" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.824"
            android:gravity="bottom|left" android:fontFamily="@font/carrois_gothic"
            app:fontFamily="@font/carrois_gothic"/>

    <TextView
            android:id="@+id/news_item_publish_date"
            android:textSize="10sp"
            android:text="Updated 2 Hours Ago"

            android:textAllCaps="true"
            android:textColor="@color/textColor_updateStatus"
            android:layout_width="181dp"
            android:layout_height="18dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/news_item_image"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.959"
            android:gravity="bottom|center_vertical"/>



</androidx.constraintlayout.widget.ConstraintLayout>